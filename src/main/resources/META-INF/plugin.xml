<idea-plugin>
    <id>org.example.detecting-refactorings-in-code-change.refactorinsight</id>
    <name>RefactorInsight</name>
    <vendor email="bobbrockbernd@gmail.com" url="http://www.tudelft.nl">TUDelft</vendor>

    <description><![CDATA[
    This plugin adds functionality to the git tab in order to allow the developer to visualize specific refactorings in commits.
    It also provides the refactoring history of a class, field or method.
      ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectConfigurable parentId="tools" instance="services.SettingsConfigurable"
                                 id="services.SettingsConfigurable"
                                 displayName="RefactorInsight Settings"/>
        <diff.DiffExtension implementation="ui.windows.DiffWindow"/>
        <projectService serviceImplementation="services.MiningService"/>
        <projectService serviceImplementation="services.WindowService"/>
        <projectService serviceImplementation="services.SettingsState"/>
    </extensions>

    <actions>
        <action id="actions.ToggleRefactoringViewAction" class="actions.ToggleRefactoringViewAction" text="Show Refactorings" description="actions.ToggleRefactoringViewAction">
            <add-to-group group-id="Vcs.Log.ChangesBrowser.Toolbar" anchor="first"/>
        </action>
        <!-- Add your actions here -->

        <action id="RefAction" class="actions.RefactoringAction" text="Mine All Refactorings"
                description="Clear refactoring cache">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="actions.RefactoringHistoryAction" class="actions.RefactoringHistoryAction" text="Check Refactoring History"
                description="Retrieve refactorings history for this method">
            <add-to-group group-id="EditorPopupMenu1" anchor="first"/>
            <keyboard-shortcut first-keystroke="control alt R" keymap="$default"/>
        </action>
    </actions>

    <projectListeners>
        <listener class="processors.CommitListener" topic="git4idea.repo.GitRepositoryChangeListener"/>
        <listener class="processors.ProjectListener" topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>


</idea-plugin>