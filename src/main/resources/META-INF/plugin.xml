<idea-plugin>
    <id>org.example.detecting-refactorings-in-code-changes</id>
    <name>Refactoring detection</name>
    <vendor email="bobbrockbernd@gmail.com" url="http://www.tudelft.nl">TUDelft</vendor>

    <description><![CDATA[
    Enter short description for your plugin her.<br>
    <em>most HTML tag may be used</em>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>Git4Idea</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Add your extensions here -->
        <projectService serviceImplementation="MiningService"/>
        <projectService serviceImplementation="MethodService"/>
    </extensions>

    <actions>
        <action id="GitWindow" class="GitWindow" text="Refactorings" description="GitWindow">
            <add-to-group group-id="Vcs.Log.ChangesBrowser.Toolbar" anchor="first"/>
        </action>
        <!-- Add your actions here -->
        <action id="ClearRefactoringCacheAction" class="ClearRefactoringCacheAction" text="Clear Refactorings"
                description="Clear refactoring cache">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="RefactoringAction" class="RefactoringAction" text="Mine Repo"
                description="Start refactoring miner">
            <add-to-group group-id="ToolsMenu" anchor="first"/>
        </action>
        <action id="MethodHistory" class="MethodHistory" text="Check method&#39;s history"
                description="Retrieve refactorings history for this method">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
    </actions>

    <projectListeners>
        <listener class="CommitListener" topic="git4idea.repo.GitRepositoryChangeListener"/>
    </projectListeners>


</idea-plugin>